<%= form_for @pet, url: {action: @action}, :html => { :class => "form" } do |f| %>
  <fieldset>
    <div class="form-group">
      <%= f.label :name %>
      <%= f.text_field :name, class: "form-control", :required => true %>
    </div>

    <div class="form-group">
      <%= f.label :age %>
      <%= f.number_field :age, class: "form-control" %>
    </div>

    <div class="form-group">
      <%= f.label :breed %>
      <%= f.text_field :breed, class: "form-control" %>
    </div>

    <div class="form-group">
      <%= f.label :weight %>
      <%= f.number_field :weight, class: "form-control" %>
    </div>

    <div class="form-group">
      <%= f.label :size %>
      <%= f.select(:size, options_for_select([['small'], ['medium'], ['large']]), class: "form-control") %>
    </div>

    <div class="form-group">
      <%= f.label :sex %>
      <%= f.select(:sex, options_for_select([['male'], ['female']]), class: "form-control") %>
    </div>

    <div class="form-group">
      <%= f.label :species %>
      <%= f.select(:species, options_for_select([['dog'], ['cat'], ['other']]), class: "form-control") %>
    </div>

    <%= f.hidden_field :user_id, :value => session[:user_id] %>
  </fieldset>
  <%= f.submit class: "btn btn-info" %>
<% end %>
