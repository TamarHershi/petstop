<div class>
  <div class="page-header">
    <% if @current_user %>
      <h1 id="timeline">Hello, <%= "#{@current_user.username}" %></h1>
    <% else %>
      <h1 id="timeline">Welcome to Pet Stop</h1>
    <% end %>
      <%= form_tag(root_path, :method => "get", id: "search-form") do %>
      <%= text_field_tag :search, params[:search], placeholder: "Search Vets" %>
      <%= submit_tag "Search" %>
      <% end %>
      <div id="vet-info">
        <% if params[:search] %>
          <% if @vets.present? %>
            <%= render "vet" %>
          <% else %>
            <p>There are no vets containing the term(s) <%= params[:search] %>.</p>
          <% end %>
        <% end %>
    <% if !@current_user %>
      <%= link_to "Sign in with Google+", "/auth/google", class:"btn btn-nav" %>
    <% end %>

      <% if @current_user %>
        <%= button_to "Add a Vet", new_vet_path, method: :get, class: "btn btn-default" %>
      <% end %>

  </div>
</div>
