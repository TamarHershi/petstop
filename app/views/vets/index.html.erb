<%= form_tag(vets_path, :method => "get", id: "search-form") do %>
<%= text_field_tag :search, params[:search], placeholder: "Search Vets" %>
<%= submit_tag "Search" %>
<% end %>

<% if @vets.present? %>
  <%= render "vet" %>
<% else %>
  <p>There are no vets containing the term(s) <%= params[:search] %>.</p>
<% end %>
